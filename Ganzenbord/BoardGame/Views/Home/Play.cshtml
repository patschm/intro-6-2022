@model BoardGame.Models.GameModel;
@{
    ViewData["Title"] = "GamePage";
}
@section Scripts {
    <script src="~/js/game.js"></script>
}
<h1>Game On</h1>
@if(Model.OwnerId == ViewBag.UserId)
{
    if(!Model.IsStarted && !Model.IsEnded)
    {
         <form asp-action="Start" method="get">
                <input type="hidden" name="gameId" value="@Model.Id" />
                <div class="form-group">
                    <input type="submit" value="Start Game" class="btn btn-primary" />
                </div>
          </form>  
    }
}
<hr/>
<h1 id="status"></h1>
<hr/>
<div id="game">
    <button id="throwDices" type="button" class="btn btn-primary">Throw Dices</button> 
    <div id="board"></div>
</div>
<input type="hidden" id="gameId" value="@Model.Id" />
<input type="hidden" id="userId" value="@ViewBag.UserId" />
